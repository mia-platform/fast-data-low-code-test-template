{
  "name": "fast-data-low-code-test-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ignore-path=.gitignore --ext=ts",
    "unit": "tap --ts ./tests/index.test.ts",
    "test": "npm run lint && npm run unit",
    "compile-config": "ts-node scripts/compile-config.ts"
  },
  "author": "Mia-Platform",
  "license": "SEE LICENCE IN LICENSE",
  "devDependencies": {
    "@mia-platform-internal/fast-data-automation-lib": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "@mia-platform/eslint-config-mia": "^3.0.0",
    "@types/tap": "^15.0.6",
    "mongodb": "^4.4.1",
    "tap": "^16.0.0",
    "testcontainers": "^8.4.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "pino": "^7.8.1"
  },
  "eslintConfig": {
    "extends": [
      "@mia-platform/eslint-config-mia"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "sort-imports": [
        "error",
        {
          "ignoreCase": true,
          "ignoreDeclarationSort": true,
          "ignoreMemberSort": true,
          "allowSeparatedGroups": true
        }
      ]
    },
    "globals": {
      "NodeJS": true
    }
  },
  "tap": {
    "check-coverage": false
  }
}
